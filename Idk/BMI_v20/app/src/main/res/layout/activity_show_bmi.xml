<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/show_bmi_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/BMI_text_view"
        android:layout_width="204dp"
        android:layout_height="115dp"
        android:layout_marginTop="16dp"
        android:text="@string/BMI_string"
        android:textAlignment="center"
        android:textSize="@dimen/hugeText_size"
        app:layout_constraintBottom_toTopOf="@+id/BMI_value_text_view"
        app:layout_constraintEnd_toEndOf="@+id/BMI_value_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/BMI_value_text_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/BMI_value_text_view"
        android:layout_width="273dp"
        android:layout_height="225dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="@dimen/hugeText_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BMI_text_view"/>
</android.support.constraint.ConstraintLayout>
